<div style="background-color: black; height: 2rem">
    <h4 class="d-flex justify-content-center text-light" style="background-color: black;">INGRESSOS</h4>
</div>
<div class="container d-flex align-items-center flex-column  mt-4 text-center">
    {{#each tickets}}
    <div class="mt-4" style="background-color: rgb(235, 235, 235); width: 30rem;">
        <div class="mt-3">
            <h4>CINE API - SALA {{movieTheater}}</h4>
            <hr>
            <h5 class="fw-bold">{{movie}}</h5>
            <p>TIPO: {{type}} | HORARIO: {{hour}} <br></p>
            <hr>
            <p class="fw-bold">
                Nº INGRESSOS: {{quantity}}
                <br>
                PREÇO: R${{price}}
            </p>
        </div>
    </div>
    {{else}}
            <option value="" class="text-light">Nenhuma sessão registrado</option>
    {{/each}}
</div>